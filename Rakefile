begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "FeedFinder"
    gemspec.summary = "Find the feeds linked to from a URL"
    gemspec.description = "Returns an array of feeds fount at the given URL, or nil if none are found."
    gemspec.email = "olav@bjorkoy.com"
    gemspec.homepage = "http://github.com/olav/FeedFinder"
    gemspec.authors = ["Olav Bjorkoy"]
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end